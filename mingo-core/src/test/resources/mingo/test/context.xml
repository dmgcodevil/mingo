<?xml version="1.0" encoding="UTF-8"?>

<context xmlns="http://www.mingo.com/schema/context"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://www.mingo.com/schema/context
         file://../../../main/resources/xml-schema/context.xsd">


    <config>
        <benchmark enabled="false"/>
    </config>

    <querySetConfig>
        <querySet path="/mingo/test/testQuerySet.xml"/>
        <querySet path="/mingo/test/second/testQuerySet2.xml"/>
    </querySetConfig>


    <queryAnalyzer type="jexl"/>

    <mongo port="27017" host="localhost" dbName="dbTest">
        <options>
            <option name="connectTimeout" value="100"/>
        </options>
    </mongo>

    <defaultConverter class="com.mingo.mapping.convert.DefaultConverter"/>

    <converters package="com.mingo.mapping.converter.custom"/>
</context>
